<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#89B2F0">

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        >

        <View
            android:id="@+id/image_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img" />

        <Button
            android:id="@+id/tap"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="150dp"
            android:backgroundTint="#C89696"
            android:text="タップ"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="100dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="eemonn database loading..." />



            <TextView
                android:id="@+id/touka"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA000000"
                android:visibility="gone"/>

            <Button
                android:id="@+id/zukann"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:backgroundTint="#C89696"
                android:text="図鑑"
                android:textSize="20dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/introduce"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:backgroundTint="#C89696"
                android:text="説明"
                android:textSize="20dp"
                android:visibility="gone"
                />

        <Button
            android:id="@+id/setting_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:backgroundTint="#C89696"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="≡"
            android:textSize="30dp"
            android:gravity="center"
            app:cornerRadius="15dp" />
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/set_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <View
            android:id="@+id/back_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img" />

        <TextView
            android:id="@+id/app_youkoso"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="100dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="551ゲームへようこそ" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="user_nameを入力してください"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:background="@color/white" />

        <Button
            android:id="@+id/kettei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="決定"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"/>

    </FrameLayout>

</LinearLayout>

