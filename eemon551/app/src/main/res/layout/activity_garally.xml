<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".garally">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:isScrollContainer="false"
        android:id="@+id/scrollView">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="カード図鑑"
                android:textSize="45sp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/genre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- View -->
                <View
                    android:layout_width="45dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

                <!-- TextView -->
                <TextView
                    android:id="@+id/genre1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大阪"
                    android:textSize="30sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

            </LinearLayout>

<!--        大阪の画像    -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </GridLayout>

            <LinearLayout
                android:id="@+id/genre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- View -->
                <View
                    android:layout_width="45dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

                <!-- TextView -->
                <TextView
                    android:id="@+id/genre2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京都"
                    android:textSize="30sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

            </LinearLayout>

<!--            京都の画像-->

            <LinearLayout
                android:id="@+id/genre3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="45dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/genre3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奈良"
                    android:textSize="30sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

            </LinearLayout>

<!--            奈良の画像-->

            <LinearLayout
                android:id="@+id/genre4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="45dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/genre4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兵庫"
                    android:textSize="30sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>
            </LinearLayout>

<!--            兵庫の画像-->

            <LinearLayout
                android:id="@+id/genre5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="45dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/genre5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="和歌山"
                    android:textSize="30sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>
            </LinearLayout>

<!--            和歌山の画像-->

            <LinearLayout
                android:id="@+id/genre6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="45dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/genre6_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="滋賀"
                    android:textSize="30sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"/>
            </LinearLayout>

<!--            滋賀の画像-->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
